{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "creators.nameIdentifier#",
  "description": "An identifier for a creator, such as an ORCID.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "nameIdentifier": {
        "type": "string",
        "minLength": 1
      },
      "nameIdentifierScheme": {
        "type": "string",
        "minLength": 1
      },
      "schemeUri": {
        "type": "string",
        "format": "uri"
      }
    },
    "required": [
      "nameIdentifier"
    ],
    "dependencies": {
      "nameIdentifier": [
        "nameIdentifierScheme"
      ]
    }
  }
}