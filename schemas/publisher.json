{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "publisher#",
  "description": "The entity that holds, archives, or publishes the resource.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "publisherIdentifier": {
      "type": "string"
    },
    "publisherIdentifierScheme": {
      "type": "string"
    },
    "schemeUri": {
      "type": "string",
      "format": "uri"
    },
    "lang": {
      "type": "string"
    }
  },
  "required": [
    "name"
  ],
  "dependencies": {
    "publisherIdentifier": [
      "publisherIdentifierScheme"
    ]
  }
}