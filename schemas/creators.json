{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "creators#",
  "description": "The main researchers involved in producing the data, or the authors of the publication.",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "nameType": {
        "type": "string",
        "enum": [
          "Organizational",
          "Personal"
        ]
      },
      "givenName": {
        "type": "string"
      },
      "familyName": {
        "type": "string"
      },
      "nameIdentifiers": {
        "$ref": "creators.nameIdentifier#"
      },
      "affiliation": {
        "$ref": "creators.affiliation#"
      }
    },
    "required": [
      "name"
    ]
  }
}