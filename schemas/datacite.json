{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "datacite#",
  "description": "The Datacite Metadata kernel schema.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "attributes": {
      "type": "object",
      "properties": {
        "doi": { "$ref": "doi#" },
        "identifiers": { "$ref": "identifiers#" },
        "creators": { "$ref": "creators#" },
        "titles": { "$ref": "titles#"},
        "publisher": { "$ref": "publisher#" },
        "publicationYear": { "$ref": "publicationYear#" },
        "subjects": { "$ref": "subjects#" },
        "resourceType": { "$ref": "resourceType#" },
        "dates": { "$ref": "dates#" },
        "contributors": { "$ref": "contributors#" },
        "descriptions": { "$ref": "descriptions#" },
        "geoLocations": { "$ref": "geoLocations#" },
        "fundingReferences": { "$ref": "fundingReferences#" },
        "formats": {"$ref": "formats#" },
        "sizes": {"$ref": "sizes#" },
        "language": {"$ref": "language#" }
      },
      "required": [
        "doi",
        "identifiers",
        "creators",
        "titles",
        "publisher",
        "publicationYear",
        "resourceType"
      ]
    }
  },
  "required": [
    "id",
    "type",
    "attributes"
  ]
}