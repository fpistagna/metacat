{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "auth.login#",
  "description": "Schema for user login payload.",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string"
    }
  },
  "required": [
    "email",
    "password"
  ]
}