{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "creators.affiliation#",
  "description": "The institutional or organizational affiliation of a creator.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "affiliationIdentifier": {
        "type": "string"
      },
      "affiliationIdentifierScheme": {
        "type": "string"
      },
      "schemeUri": {
        "type": "string",
        "format": "uri"
      }
    },
    "required": [
      "name"
    ],
    "dependencies": {
      "affiliationIdentifier": [
        "affiliationIdentifierScheme"
      ]
    }
  }
}